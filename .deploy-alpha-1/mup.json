{
  "servers": [
    {
      "host": "alpha.earthref.org",
      "username": "earthref",
      "pem": "~/.ssh/digital_ocean.id_rsa"
    }
  ],

  "ssl": {
    "pem": "~/earthref.ssl.pem"
  },

  "setupMongo": true,

  "setupNode": true,

  "nodeVersion": "5.6.0",

  "setupPhantom": true,

  "enableUploadProgressBar": true,

  "appName": "earthref",

  "app": "../",

  "env": {
    "ROOT_URL": "http://alpha.earthref.org",
    "PORT": 80
  },

  "deployCheckWaitTime": 15
}
